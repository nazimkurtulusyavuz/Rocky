@model IEnumerable<Rocky.Models.ApplicationType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus mx-2"></i>
                Create New Application Type
            </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (ApplicationType applicationType in Model)
                {
                <tr>
                    <td width="50%">@applicationType.Name</td>
                    <td class="text-center">
                        <div class="">
                            <a asp-controller="ApplicationType" asp-action="Edit" asp-route-id="@applicationType.Id" class="btn btn-primary btn-sm mx-1">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-controller="ApplicationType" asp-action="Delete" asp-route-id="@applicationType.Id" class="btn btn-danger btn-sm mx-1">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No application type exist.</p>
    }
</div>

